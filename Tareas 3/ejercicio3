
CREATE OR REPLACE PROCEDURE SP_MOSTRAR_DATOS_ANIMALES 
IS 
  DATOS_ANIMALES SYS_REFCURSOR;
  REGISTRO ANIMALES%ROWTYPE;
BEGIN
  DATOS_ANIMALES:= FN_DATOS_ANIMALES;
  LOOP
    FETCH DATOS_ANIMALES INTO REGISTRO;
    EXIT WHEN DATOS_ANIMALES%NOTFOUND;
    DBMS_OUTPUT.PUT_LINE('EL ID DEL ANIMAL ES: '||REGISTRO.ANIMALID);
    DBMS_OUTPUT.PUT_LINE('LA ESPECIE DEL ANIMAL ES: '||REGISTRO.ESPECIE);
    DBMS_OUTPUT.PUT_LINE('EL NOMBRE DEL ANIMAL ES: '||REGISTRO.NOMBRE);
    DBMS_OUTPUT.PUT_LINE('EL PESO DEL ANIMAL ES: '||REGISTRO.PESO);
    DBMS_OUTPUT.PUT_LINE('SU FECHA DE NACIMIENTO ES: '||REGISTRO.FECHANACIMIENTO);
    DBMS_OUTPUT.PUT_LINE('SU LUGARCODIGO ES: '||REGISTRO.LUGARCODIGO);
    DBMS_OUTPUT.PUT_LINE(CHR(13));
  END LOOP;
END;

BEGIN
    SP_MOSTRAR_DATOS_ANIMALES; 
END;
